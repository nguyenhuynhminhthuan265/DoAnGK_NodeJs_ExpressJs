<div class="row">
	<div class="col-md-12 mb-2">
		<div class="page-header-breadcrumb">
			<ul class="breadcrumb-title">
				<li class="breadcrumb-item"><a href="/admin/home"> <i class="feather icon-home"></i> Trang chủ
					</a></li>
				<li class="breadcrumb-item"><a href="#!">Danh sách bill</a></li>
			</ul>
		</div>
	</div>
	<div class="col-sm-12">
		<div class="card px-3">
			<div class="card-header px-0 pb-2">
				<h2 class="text-uppercase text-center">Danh sách bill</h2>
				{{!-- <a href="/admin/bill/add" class="btn btn-sm btn-primary">Thêm mới</a> --}}

			</div>
			<div class="card-block table-border-style">
				<div class="table-responsive">


					<table class="table table-striped table-bordered" id="dtBasicExample">
						<thead>
							<tr>
								<th>STT</th>
								<th>Ngày tạo</th>
								<th>Khách hàng</th>
								<th>Thành tiền</th>
								<th>Hành Động</th>
							</tr>
						</thead>
						<tbody>
							{{#each bills}}
							<tr>
								<td>{{@key}}</td>
								<td>{{dateBill}}</td>
								<td>{{user.email}}</td>

								<td class="text-danger">{{price}}đ</td>
								<td>
									<a href="/admin/bill/detail/{{_id}}"
										class="btn btn-sm btn-success btn-round py-1 font-weight-bold">
										Xem chi tiết hóa đơn </a>
									<a href="/admin/bill/edit/{{_id}}"
										class="btn btn-sm btn-info btn-round py-1 font-weight-bold">
										Sửa
									</a>
									<a href="/admin/bill/delete/{{_id}}"
										class="btn btn-sm btn-danger btn-round py-1 font-weight-bold">
										Xóa
									</a>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>