<div class="row">
    <div class="col-md-12 mb-2">
        <div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item"><a href="/admin/home"> <i class="feather icon-home"></i> Trang chủ
                    </a></li>
                <li class="breadcrumb-item"><a href="#!">Danh sách tài khoản</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card px-3">
            <div class="card-header px-0 pb-2">
                <h2 class="text-uppercase text-center">Danh sách tài khoản</h2>
                <a href="/admin/user/add" class="btn btn-sm btn-primary">Thêm mới</a>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                
                                <th>Quyền</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <th>{{@index}}</th>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                
                                <td>{{role.description}}</td>
                                <td>
                                     <a href="/admin/user/detail/{{_id}}" class="btn btn-sm btn-success btn-round py-1 font-weight-bold">Xem</a>
                                    <a href="/admin/user/edit/{{_id}}" class="btn btn-sm btn-info btn-round py-1 font-weight-bold">Sửa</a>
                                    <a href="/admin/user/delete/{{_id}}" class="btn btn-sm btn-danger btn-round py-1 font-weight-bold">Xóa</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>