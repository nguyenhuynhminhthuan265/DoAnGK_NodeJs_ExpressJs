                    <div class="col-12 mt-3">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary m-b-0">Lưu lại</button>
                            <a href="/admin/user" class="btn btn-secondary text-white">Quay
                                lại</a>
                        </div>
                    </div>
            </div>
            </form>
        </div>
    </div>
