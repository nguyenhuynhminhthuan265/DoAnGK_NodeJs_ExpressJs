<div class="row">
    <div class="col-md-12 mb-2">
        <div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item"><a href="/admin/home"> <i class="feather icon-home"></i> Trang chủ
                    </a></li>
                <li class="breadcrumb-item"><a href="#!">Thêm mới tài khoản</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h2 class="text-uppercase text-center">Cập nhật tài khoản</h2>
            </div>
            <div class="card-block">
                <form action="/admin/user/edit" method="post">
                    <input type="hidden" name="id" class="form-control" value="{{user._id}}" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Họ tên</label>
                                <input type="text" name="username" class="form-control" value="{{user.username}}" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="email" class="form-control" value="{{user.email}}" />
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" name="password" class="form-control" value="{{user.password}}" />
                            </div>

                            <div class="form-group">
                                <label>Loại người dùng</label>
                                <select name="role" name="" id="" class="form-control">
                                    {{#each roles}}
                                    <option value="{{_id}}">{{description}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
